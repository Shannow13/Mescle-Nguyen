<h1>Nos livres disponibles</h1>

<% form_tag(books_path, :method => "get", id: "search-form") do %> 	
	<%= text_field_tag :search, params[:search], placeholder: "Search books" %>
	<%= submit_tag "Search", :name => nil%>
<% end %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor name</th>
      <th>Editor</th>
      <th>Collection</th>
      <th>Kind</th>
      <th>Cote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.autor_name %></td>
        <td><%= book.editor %></td>
        <td><%= book.collection %></td>
        <td><%= book.kind %></td>
        <td><%= book.cote %></td>
        <td><%= link_to 'Show', book ,class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-info' if can? :update, User%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if can? :destroy, User%></td>
      </tr>
    <% end %>

  </tbody>
  
</table>


<br>
<%= link_to 'List of Autors', autors_path, class: 'btn btn-default'%>
<%= link_to 'List of Kinds', kinds_path, class: 'btn btn-default'%>
<%= link_to 'New Book', new_book_path, class: 'btn btn-default' if can? :create, User%>




<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, class: 'btn btn-default', :method => :delete)%>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
