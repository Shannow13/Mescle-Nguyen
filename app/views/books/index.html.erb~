<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor name</th>
      <th>Editor</th>
      <th>Collection</th>
      <th>Kind</th>
      <th>Cote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.autor_name %></td>
        <td><%= book.editor %></td>
        <td><%= book.collection %></td>
        <td><%= book.kind %></td>
        <td><%= book.cote %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

