<h1>Listing books</h1>


<form>
      <% form_tag(books_path, :method => "get", id: "search-form") do %>
	
	 	
	<%= text_field_tag :search, params[:search], placeholder: "Search books" %>
	<%= submit_tag "Search"%>
<% end %>
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor name</th>
      <th>Editor</th>
      <th>Collection</th>
      <th>Kind</th>
      <th>Cote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.autor_name %></td>
        <td><%= book.editor %></td>
        <td><%= book.collection %></td>
        <td><%= book.kind %></td>
        <td><%= book.cote %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) if can? :update, User%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, User%></td>
      </tr>
    <% end %>

  </tbody>
  
</table>

<br>
<%= link_to 'List of Autors', controller: 'autors' %>
<%= link_to 'List of Kinds', controller: 'kinds' %>
<%= link_to 'New Book', new_book_path if can? :create, User %>



