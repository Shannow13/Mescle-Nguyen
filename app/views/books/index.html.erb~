<h1>Listing books</h1>




<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Autor name</th>
      <th>Editor</th>
      <th>Collection</th>
      <th>Kind</th>
      <th>Cote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.autor_name %></td>
        <td><%= book.editor %></td>
        <td><%= book.collection %></td>
        <td><%= book.kind %></td>
        <td><%= book.cote %></td>
        <td><%= link_to 'Show', book ,class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-info' if can? :update, User%></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if can? :destroy, User%></td>
      </tr>
    <% end %>

  </tbody>
  
</table>
<form>
      <% form_tag(books_path, :method => "get", id: "search-form") do %>
	
	 	
	<%= text_field_tag :search, params[:search], placeholder: "Search books" %>
	<%= submit_tag "Search"%>
<% end %>
</form>

