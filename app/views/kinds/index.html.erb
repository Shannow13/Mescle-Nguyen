<h1>Listing kinds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.name %></td>
        <td><%= kind.cote %></td>
        <td><%= link_to 'Show', kind %></td>
        <td><%= link_to 'Edit', edit_kind_path(kind) if can? :update, User%></td>
        <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, User%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'List of Autors', controller: 'autors' %>
<%= link_to 'List of Books', controller: 'books' %>
<%= link_to 'New Kind', new_kind_path if can? :create, User%>
